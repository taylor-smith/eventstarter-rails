<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :location %>
    <%= f.input :time %>
    <%= f.input :deadline %>
    <%= f.input :min_number %>
    <%= f.input :max_number %>
    <%= f.input :event_name %>
    <%= f.input :event_desc %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
